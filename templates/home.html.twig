{% extends "base.html.twig" %}


{% block body %}
	<h1>Nos produits Phares !
	</h1>
	<div class="row">
		{% for p in products %}
			<div class="col">
				<div class="card">
					<img src="{{p.mainPicture}}" class="img-fluid" alt="Image du produits">
					<div class="card-body">
						<h4 class="card-title">{{p.name}}
							({{p.price / 100}}
							&euro; )</h4>
						<span class="badge bg-info">{{p.category.name}}</span>
						<p class="card-text">{{p.shortDescription}}</p>
						<a href="{{path('product_show', {'category_slug':p.category.slug, 'slug':p.slug})}}" class="btn btn-primary btn-sm">Details</a>
						<a href="#" class="btn btn-success btn-sm">Ajouter</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
