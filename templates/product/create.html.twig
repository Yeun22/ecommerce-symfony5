{% extends "base.html.twig" %}

{# {% form_theme formView 'bootstrap_4_layout.html.twig' %} #}

{% block title %}
	Créer un nouveau produit
{% endblock %}

{% block body %}
	<h1>Nouveau produit</h1>
	{# {{ form(formView) }} #}
	{{ form_start(formView) }}

	<div class="row">
		<div class="col">
			{{ form_row(formView.name) }}
			{{ form_row(formView.price) }}
		</div>
		<div class="col">
			{{ form_row(formView.mainPicture) }}
			{{ form_row(formView.category) }}
			{{ form_row(formView.shortDescription) }}
		</div>
	</div>
	{{ form_errors(formView) }}

	{# {{ form_widget(formView) }} #}


	<button type="submit" class="btn btn-primary">
		<i class="fas fa-save"></i>
		Créer le Produit</button>

	{{ form_end(formView) }}

{% endblock %}

